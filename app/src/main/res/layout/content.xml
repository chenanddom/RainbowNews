<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/menu_toggle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >
            <com.dom.rainbownews.view.AlwaysMarqueeTextView
                android:id="@+id/weather_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:text="@string/weather_title"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_weight="9.8" >
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="1dp" />
    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.2"
        android:background="@android:color/white"
        android:layout_height="60dp">
        <RadioButton
            android:id="@+id/rb_home_news"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:button="@null"
            android:layout_marginLeft="15dp"
            android:background="@drawable/radiobutton_selector"
           />
        <RadioButton
            android:id="@+id/rb_foreign_news"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:button="@null"
            android:layout_marginLeft="30dp"
            android:background="@drawable/radiobutton_selector2"
            />
        <RadioButton
            android:id="@+id/rb_socienty_news"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:button="@null"
            android:layout_marginLeft="30dp"
            android:background="@drawable/radiobutton_selector3"
            />
    <RadioButton
        android:id="@+id/rb_tech_news"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:button="@null"
        android:layout_marginLeft="30dp"
        android:background="@drawable/radiobutton_selector4"
        />
    </RadioGroup>
</LinearLayout>